{
  "name": "modern-canvas",
  "type": "module",
  "version": "0.12.2",
  "packageManager": "pnpm@10.18.1",
  "description": "A JavaScript WebGL rendering engine.",
  "author": "wxm",
  "license": "MIT",
  "homepage": "https://github.com/qq15725/modern-canvas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qq15725/modern-canvas.git"
  },
  "bugs": {
    "url": "https://github.com/qq15725/modern-canvas/issues"
  },
  "keywords": [
    "modern",
    "canvas",
    "webgl",
    "webgl2"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.js",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && unbuild",
    "dev": "vite docs",
    "lint": "eslint src",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bumpp package.json --commit \"release: v%s\" --push --all --tag",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "lottie-web": "^5",
    "modern-gif": "^2",
    "yoga-layout": "^3"
  },
  "peerDependenciesMeta": {
    "lottie-web": {
      "optional": true
    },
    "modern-gif": {
      "optional": true
    },
    "yoga-layout": {
      "optional": true
    }
  },
  "dependencies": {
    "colord": "^2.9.3",
    "earcut": "^3.0.2",
    "modern-font": "^0.4.4",
    "modern-idoc": "^0.10.1",
    "modern-path2d": "^1.4.10",
    "modern-text": "^1.9.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/earcut": "^3.0.0",
    "@types/node": "^24.8.1",
    "bumpp": "^10.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.38.0",
    "lint-staged": "^16.2.4",
    "lottie-web": "^5.13.0",
    "modern-gif": "^2.0.4",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.1.11",
    "vitest": "^3.2.4",
    "yoga-layout": "^3.2.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint src --fix"
  }
}
